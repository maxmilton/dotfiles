    // },
    "biome.enabled": false,
    "biome.requireConfigFile": true,
    "harper.isolateEnglish": true,
    // "harper.codeActions.ForceStable": true,
    "redhat.telemetry.enabled": false,
    "zig.path": "zig",
    // "zig.zls.enabled": "on",
    "zig.zls.path": "zls",
    "zig.zls.warnStyle": true,
