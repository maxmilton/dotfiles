{
  "telemetry.enableCrashReporter": false, // Deprecated but still used by extensions
  "telemetry.enableTelemetry": false, // Deprecated but still used by extensions
  "telemetry.telemetryLevel": "off",
  "update.mode": "none", // Use package manager on Linux
  "window.autoDetectHighContrast": false,
  "window.titleBarStyle": "custom",
  "window.restoreWindows": "preserve",
  "window.menuBarVisibility": "compact",
  "workbench.activityBar.location": "top",
  "workbench.startupEditor": "none",
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.historyBasedLanguageDetection": true,
  "workbench.list.defaultFindMode": "highlight",
  "workbench.enableExperiments": false,
  "workbench.tips.enabled": false,
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.colorCustomizations": {
    "editorInlayHint.background": "#00000000",
    "editorInlayHint.foreground": "#40434C",
    "editorInlayHint.parameterBackground": "#00000000",
    "editorInlayHint.parameterForeground": "#40434C",
    "editorInlayHint.typeBackground": "#00000000",
    "editorInlayHint.typeForeground": "#40434C",
    "editorRuler.foreground": "#333333"
  },
  "breadcrumbs.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.snippetSuggestions": "top",
  "editor.renderLineHighlight": "all",
  "editor.folding": false,
  "editor.accessibilitySupport": "off",
  "editor.fontSize": 15,
  // "editor.fontFamily": "'JetBrains Mono', monospace, 'Noto Emoji', 'Noto Color Emoji'",
  // "editor.fontFamily": "'Monaspace Neon', monospace, 'Noto Emoji', 'Noto Color Emoji'",
  "editor.fontFamily": "'Monaspace Neon Var', monospace, 'Noto Emoji', 'Noto Color Emoji'",
  // https://github.com/githubnext/monaspace#visual-studio-code
  // "editor.fontLigatures": "'calt', 'liga', 'ss07', 'ss08'",
  "editor.fontLigatures": "'calt', 'liga'",
  "editor.rulers": [80, 100],
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.inlineSuggest.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "*.deprecated": {
        "strikethrough": true
      }
    }
  },
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.suggestSelection": "first",
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.guides.bracketPairs": "active",
  "editor.bracketPairColorization.enabled": true,
  "editor.wordBasedSuggestions": "allDocuments",
  // "editor.experimental.asyncTokenization": true,
  // "editor.experimental.preferTreeSitter.ini": true,
  // "editor.experimental.preferTreeSitter.typescript": true,
  "editor.experimental.treeSitterTelemetry": false,
  "debug.confirmOnExit": "always",
  "diffEditor.ignoreTrimWhitespace": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.env": "properties",
    "*.fish": "shellscript",
    "*.tmpl": "go",
    "*.ts.sh": "typescript", // file must use hashbang: #!/usr/bin/env bun
    "package.json": "jsonc"
  },
  "files.exclude": {
    // "**/.*cache": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/*.db-lock": true,
    "**/*.db-shm": true,
    "**/*.db-wal": true,
    "**/*.db": true,
    "**/coverage": true,
    "**/node_modules": true,
    "**/Thumbs.db": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.*cache": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.tsbuildinfo": true,
    "**/.vscode": true,
    "**/*-lock.*": true,
    "**/*.bak": true,
    "**/*.bak/**": true,
    "**/*.db-lock": true,
    "**/*.db-shm": true,
    "**/*.db-wal": true,
    "**/*.db": true,
    "**/*.gz": true,
    "**/*.lock": true,
    "**/*.log": true,
    "**/*.map": true,
    "**/*.min.*": true,
    "**/*.sqlite-shm": true,
    "**/*.sqlite-wal": true,
    "**/*.sqlite": true,
    "**/*.tar.*": true,
    "**/*.zip": true,
    "**/build/**": true,
    "**/bun.lock": true,
    "**/bun.lockb": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/export/**": true,
    "**/node_modules/**": true,
    "**/package-lock.json": true,
    "**/playwright-report/**": true,
    "**/pnpm-lock.yaml": true,
    "**/public/**": true,
    "**/test-results/**": true,
    "**/test/**": true,
    "**/tests/**": true,
    "**/tmp/**": true,
    "**/yarn.lock": true,
    "**/zig-cache/**": true,
    "**/zig-out/**": true
  },
  "search.seedWithNearestWord": true,
  "search.smartCase": true,
  "search.quickOpen.includeSymbols": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.detectSubmodules": false,
  "git.enableCommitSigning": true,
  "git.mergeEditor": false,
  "git.suggestSmartCommit": false,
  "scm.alwaysShowRepositories": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.shellIntegration.enabled": true,

  "html.completion.attributeDefaultValue": "empty",
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "js/ts.implicitProjectConfig.checkJs": true,
  "npm.autoDetect": "off",
  "npm.packageManager": "bun",
  "npm.scriptRunner": "bun",
  "task.autoDetect": "off",
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.npm": "bun",
  "typescript.referencesCodeLens.enabled": true,
  "typescript.surveys.enabled": false,
  "typescript.tsc.autoDetect": "off",

  "[css][html][json][jsonc][markdown][scss][xml]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "quickfix.biome": "explicit"
    },
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.sortImports": "never",
      "source.organizeImports": "never",
      "source.organizeImports.biome": "explicit",
      "source.fixAll": "never",
      "source.fixAll.eslint": "never",
      "quickfix.biome": "explicit"
    },
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.lineNumbers": "interval",
    "editor.rulers": [80],
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "indent",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.renderWhitespace": "boundary",
    "files.trimTrailingWhitespace": false
  },
  "[zig]": {
    "editor.defaultFormatter": "ziglang.vscode-zig",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "files.eol": "\n",

    // Suggestions from https://zigtools.org/zls/editors/vscode/
    "editor.suggest.insertMode": "replace",
    "editor.stickyScroll.defaultModel": "foldingProviderModel"
  },

  "biome.searchInPath": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "githubPullRequests.pullBranch": "never",
  "vsintellicode.java.completionsEnabled": false,
  "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",
  "vsintellicode.python.completionsEnabled": false,

  "zig.path": "zig",
  "zig.zls.enabled": "on",
  "zig.zls.path": "zls",
  "zig.zls.warnStyle": true,

  "gitlens.keymap": "none",
  "hardhat.telemetry": false,
  "liveshare.presence": true,
  "solidity.telemetry": false
}
